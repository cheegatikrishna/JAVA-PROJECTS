//ONLINE STUDENT ELECIONS
import java.util.Scanner;
public class Project3
{
    public static void displayResult()
    {
        Scanner asa = new Scanner(System.in);
        float total=a + b + c;
        System.out.println("***WELCOME TO MOTHER THERESA STUDENT ELECTIONS***");
        System.out.println("Candidates\tResult\t% of Total Votes");
        System.out.println("\nA:KRISHNA\t" + a + "\t" + a/total * 100);
        System.out.println("B:BASAVA\t" + b + "\t" + b/total * 100);
        System.out.println("C:UPENDRA\t\t" + c + "\t" + c/total * 100);
        System.out.println("\nTOTAL VOTES: " + total);
        String winner="";
        if(a>b && a>c)
        winner="KRISHNA";
        if(b>a && b>c)
        winner="BASAVA";
        if(c>a && c>b)
        winner="UPENDRA";
        System.out.println("\nAnd the winner is: " + winner);
        System.out.println("----------------------");
        System.out.println("Type V-vote, R-result, Q-quit");
        System.out.print("Enter your choice: ");
        choice = asa.nextLine();
    }
    
    
    public static void displayVote()
    {
        Scanner asa = new Scanner(System.in);

        System.out.print("Enter your vote: ");
        candid = asa.next();
        candidcode = candid.charAt(0);
        switch(candidcode)
        {
            case 'A':
                case 'a': a++; break;
                case 'B':
                    case 'b': b++; break;
                    case 'C': 
                        case 'c': c++; break;
                        default: System.out.println("Invalid candidates code");
            
        }
    }
    
    
    
static    String choice, candid;
static char candidcode;
static int a=0, b=0, c=0;    
    
    
public static void main( String[] args )
{ 
Scanner asa = new Scanner(System.in);

do
{
    System.out.println("**üçª*WELCOME TO MOTHER THRESA STUDENT ELECTIONS***üçª");
    System.out.println("Candidates");
    System.out.println("\nA:KRISHNAüôà");
    System.out.println("B:BASAVAüôä");
    System.out.println("C:UPENDRAüôâ");
    System.out.println("----------------------");
    System.out.println("Type V-vote, R-result, Q-quit");
    System.out.print("Enter your choice: ");
    choice = asa.nextLine();

if(choice.equalsIgnoreCase("V"))
{
    displayVote();
}



if(choice.equalsIgnoreCase("R"))
{
displayResult();
} 
}
while(!(choice.equalsIgnoreCase("Q"))); 
}
}
